<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/labelInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opponent: Unknown"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="19dp"
        android:gravity="center"/>
    
    <TextView
        android:id="@+id/labelTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick guess word character count"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelInfo"
        android:layout_marginTop="5dp"
        android:textSize="19dp"
        android:gravity="center"/>

    <Spinner
        android:id="@+id/pickerNumberOfCharacters"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelTip"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/labelWhoGoesFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My turn to go:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pickerNumberOfCharacters"
        android:layout_marginTop="15dp"
        android:textSize="19dp"
        android:gravity="center"/>

    <Spinner
        android:id="@+id/pickerTurnToGo"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelWhoGoesFirst"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/labelOpponentStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opponent is currently choosing setup values..."
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        android:textSize="17dp"
        android:gravity="center"/>
    
    <Button
        android:id="@+id/buttonAgree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agree?"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pickerTurnToGo"
        android:layout_marginTop="25dp"/>
</android.support.constraint.ConstraintLayout>